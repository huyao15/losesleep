<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/post_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/post_inner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_with_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/userAvatar"
                style="@style/post_userAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/userName"
                style="@style/post_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/userAvatar" />

            <TextView
                android:id="@+id/addTime"
                style="@style/post_addTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_toRightOf="@id/userAvatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/post"
            style="@style/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>